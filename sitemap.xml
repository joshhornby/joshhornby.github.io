---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for post in site.posts limit:1 %}
    {% assign last_post_time = post.sitemap.lastmod | remove: " " | date_to_xmlschema %}
  {% endfor %}

  <url>
    <loc>{{ site.url }}</loc>
    <lastmod>{{ last_post_time | date_to_xmlschema }}</lastmod>
  </url>

  {% comment %}
  Find the About page object by its URL (adjust the trailing slash if needed)
  {% endcomment %}
  {% assign about_page = site.pages | where: "url", "/about" | first %}

  <url>
    <loc>{{ site.url }}/about</loc>
    <lastmod>{{ about_page.sitemap.lastmod | date_to_xmlschema }}</lastmod>
  </url>

  {% for post in site.posts %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      {% if post.sitemap %}
        <lastmod>{{ post.sitemap.lastmod | remove: " " | date_to_xmlschema }}</lastmod>
      {% endif %}
    </url>
  {% endfor %}
  <url>
    <loc>{{ site.url }}/tags</loc>
    <lastmod>{{ last_post_time | date_to_xmlschema }}</lastmod>
  </url>
  {% for tag in site.tags %}
    {% assign posts_for_tag = tag[1] %}
    {% if posts_for_tag.size > 0 %}
    {%- comment -%} Sort by the sitemapâ€™s lastmod field {%- endcomment -%}
    {% assign sorted = posts_for_tag | sort: "sitemap.lastmod" %}
    {% assign last_post = sorted | last %}
    {%- comment -%} Grab the sitemap.lastmod from that post {%- endcomment -%}
    {% assign git_time = last_post.sitemap.lastmod %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}/tags/{{ tag[0] | slugify }}</loc>
      <lastmod>{{ git_time | date_to_xmlschema }}</lastmod>
    </url>
    {% endif %}
  {% endfor %}
</urlset>
